<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_30">

    <TextView
        android:id="@+id/sure_delete_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/no_dimen"
        android:layout_marginTop="@dimen/no_dimen"
        android:letterSpacing="0.1"
        android:text="@string/sure_you_want_to_delete_this_target"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/target_background_confirm_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:src="@drawable/ic_oval_marker_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sure_delete_text_view" />

    <ImageView
        android:id="@+id/target_confirm_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/target_background_confirm_image_view"
        app:layout_constraintEnd_toEndOf="@id/target_background_confirm_image_view"
        app:layout_constraintStart_toStartOf="@id/target_background_confirm_image_view"
        app:layout_constraintTop_toTopOf="@id/target_background_confirm_image_view"
        app:srcCompat="@drawable/ic_chess" />

    <TextView
        android:id="@+id/target_title_confirm_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/no_dimen"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginEnd="@dimen/no_dimen"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target_background_confirm_image_view"
        tools:text="Teo va a Camboya"/>

    <TextView
        android:id="@+id/warning_message_confirm_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/no_dimen"
        android:layout_marginTop="@dimen/no_dimen"
        android:layout_marginEnd="@dimen/no_dimen"
        android:padding="@dimen/padding_30"
        android:text="@string/remember_that_if_you_delete"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target_title_confirm_text_view" />

    <LinearLayout
        android:id="@+id/small_buttons_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warning_message_confirm_text_view">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm_delete_button"
            android:layout_width="@dimen/width_confirm_button"
            android:layout_height="@dimen/height_confirm_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="@string/delete"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm_cancel_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@dimen/width_confirm_button"
            android:layout_height="@dimen/height_confirm_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="@string/cancel"
            android:textColor="@color/black" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
