<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topic_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/topic_image_view"
        android:layout_width="@dimen/no_dimen"
        android:layout_height="@dimen/no_dimen"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:src="@drawable/ic_target"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="W,1:1"/>

    <TextView
        android:id="@+id/topic_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_14"
        android:letterSpacing="0.2"
        app:layout_constraintBottom_toBottomOf="@+id/topic_image_view"
        app:layout_constraintStart_toEndOf="@id/topic_image_view"
        app:layout_constraintTop_toTopOf="@id/topic_image_view"
        tools:text="Travel" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_separator"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/topic_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
